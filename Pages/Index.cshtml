@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="card shadow-sm border-0 p-4 bg-white">
    <h2 class="mb-4">📄 智慧履歷分析</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">上傳 PDF 履歷：</label>
            <input type="file" asp-for="ResumeFile" accept=".pdf" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">或直接貼上履歷文字：</label>
            <textarea asp-for="ResumeText" rows="6" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">目標職缺說明：</label>
            <textarea asp-for="JobDescription" rows="4" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">🚀 開始分析</button>
    </form>
</div>
